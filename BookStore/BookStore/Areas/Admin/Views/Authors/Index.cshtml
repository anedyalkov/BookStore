@model IEnumerable<AdminAuthorListingServiceModel>

@{
    ViewData["Title"] = "Администрация на Автори";
}

<h2>
    @ViewData["Title"]
</h2>
<div class="row">
    <div class="col-md-4 mb-3">
        <a asp-action=@nameof(AuthorsController.Create) class="btn btn-primary">Добави автор</a>
    </div>
</div>

<table class="table table-hover table-bordered table-striped table-responsive">
    <thead>
        <tr>
            <th>Номер</th>
            <th>Име</th>
            <th>Фамилия</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var author in Model)
        {
        <tr>
            <td>@author.Id</td>
            <td>@author.FirstName</td>
            <td>@author.LastName</td>
            <td>
                @if (author.IsDeleted == false)
                {
                    <a asp-action=@nameof(AuthorsController.Edit) asp-route-id=@author.Id class="btn btn-warning">Редактирай</a>
                    <a asp-action=@nameof(AuthorsController.Hide) asp-route-id=@author.Id class="btn btn-danger">Скрий</a>
                    <a asp-action=@nameof(AuthorsController.Show) asp-route-id=@author.Id class="btn btn-success disabled">Покажи</a>
                }
                else
                {
                    <a asp-action=@nameof(AuthorsController.Edit) asp-route-id=@author.Id class="btn btn-warning disabled">Редактирай</a>
                    <a asp-action=@nameof(AuthorsController.Hide) asp-route-id=@author.Id class="btn btn-danger disabled">Скрий</a>
                    <a asp-action=@nameof(AuthorsController.Show) asp-route-id=@author.Id class="btn btn-success">Покажи</a>
                }
            </td>
        </tr>
        }
    </tbody>
</table>

