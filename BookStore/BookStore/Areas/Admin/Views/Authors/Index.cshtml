@model IEnumerable<AdminAuthorListingServiceModel>

@{
    ViewData["Title"] = "Администрация на Автори";
}

<h2>
    @ViewData["Title"]
</h2>
<div class="row">
    <div class="col-md-4 mb-3">
        <a asp-action=@nameof(AuthorsController.Create) class="btn btn-primary">Добави автор</a>
    </div>
</div>
@if (Model.Count() == 0)
{
    <h3 class="text-center mb-3">Няма добавени автори. </h3>
}
else
{
    <div class="container justify-content-center">
        <table class="table table-hover table-bordered table-striped">
            <thead>
                <tr>
                    <th>Номер</th>
                    <th>Име</th>
                    <th>Фамилия</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var author in Model)
                {
                    <tr>
                        <td>@author.Id</td>
                        <td>@author.FirstName</td>
                        <td>@author.LastName</td>
                        <td class="justify-content-center d-flex">
                            @if (author.IsDeleted == false)
                            {
                                <a asp-action=@nameof(AuthorsController.Edit) asp-route-id=@author.Id class="btn btn-warning m-1">Редактирай</a>
                                <a asp-action=@nameof(AuthorsController.Hide) asp-route-id=@author.Id class="btn btn-danger m-1">Скрий</a>
                                <a asp-action=@nameof(AuthorsController.Show) asp-route-id=@author.Id class="btn btn-success disabled m-1">Покажи</a>
                            }
                            else
                            {
                                <a asp-action=@nameof(AuthorsController.Edit) asp-route-id=@author.Id class="btn btn-warning m-1">Редактирай</a>
                                <a asp-action=@nameof(AuthorsController.Hide) asp-route-id=@author.Id class="btn btn-danger disabled m-1">Скрий</a>
                                <a asp-action=@nameof(AuthorsController.Show) asp-route-id=@author.Id class="btn btn-success m-1">Покажи</a>
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

}

