@model AdminUserListingViewModel
@{
    ViewData["Title"] = "Администрация на потребителите";
}

<h2> @ViewData["Title"]</h2>

<div class="container justify-content-center">
    <table class="table table-hover table-bordered ">
        <thead>
            <tr>
                <th>Потребителско име</th>
                <th>Email</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in Model.Users)
            {
                <tr>
                    <td>@user.Username</td>
                    <td>@user.Email</td>
                    <td class="text-center"><a asp-action=@nameof(UsersController.Roles) asp-route-id=@user.Id class="btn btn-primary pull-right m-1">Роли</a></td>
                </tr>
            }
        </tbody>
    </table>
</div>


