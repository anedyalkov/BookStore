@using Microsoft.AspNetCore.Identity
@using BookStore.Domain
@inject SignInManager<BookStoreUser> SignInManager
@inject UserManager<BookStoreUser> UserManager

@if (SignInManager.IsSignedIn(User))
{
    <ul class="navbar-nav navbar-right">
        <li class="nav-item dropdown">
            <a class="nav-link dropdown-toggle text-white" href="#" id="dropdownMenuLink" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                 Здравей, @User.Identity.Name!
            </a>
            <div class="dropdown-menu" aria-labelledby="dropdownMenuLink">
                <a asp-area="" asp-controller="Orders" asp-action="My" class="dropdown-item "> Моите поръчки</a>
                <a asp-area="Identity" asp-page="/Account/Logout" class="dropdown-item "> Изход</a>
            </div>
        </li>
    </ul>
}
else
{
    <ul class="navbar-nav navbar-right">
        <li class="nav-item">
            <a asp-area="Identity" asp-page="/Account/Login" class="nav-link text-white"><i class="fas fa-user"></i> Вход</a>
        </li>
    </ul>
}

